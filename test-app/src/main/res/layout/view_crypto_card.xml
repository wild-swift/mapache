<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/vccTopBorder"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        tools:background="#FF7141" />

    <ImageView
        android:id="@+id/vccCoinImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        tools:src="@drawable/ic_ztc_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="124dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vccTicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="6dp"
            android:textColor="#0F0F0F"
            android:textSize="26sp"
            tools:text="ZTC" />

        <TextView
            android:id="@+id/vccCryptoCurAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif"
            android:textColor="#0F0F0F"
            android:textSize="36sp"
            tools:text="0.1195656" />
    </LinearLayout>

    <TextView
        android:id="@+id/vccCountryCurAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="177dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="24sp"
        android:textColor="#7A7A7C"
        tools:text="Â£729.50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center">
        <TextView
            android:id="@+id/vccBuyButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            tools:text="Buy Zitcoin"
            tools:background="#FF7141"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fff"
            />
        <View android:layout_width="8dp" android:layout_height="0dp"/>
        <TextView
            android:id="@+id/vccSellButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            tools:text="Sell Zitcoin"
            tools:textColor="#FF7141"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            />
    </LinearLayout>
</merge>